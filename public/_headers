# ================================
# Global Security Headers
# ================================
/*
  # --- Core Security Headers ---
  X-Content-Type-Options: nosniff
  X-Frame-Options: DENY
  Referrer-Policy: strict-origin-when-cross-origin
  Permissions-Policy: geolocation=(), microphone=(), camera=(), payment=(), usb=(), bluetooth=()

  # --- Content Security Policy (CSP) ---
  # Start strict; open up only what you need.
  # If you use analytics/CDNs, add them to the relevant directives below.
  Content-Security-Policy: default-src 'self';
  base-uri 'self';
  form-action 'self';
  frame-ancestors 'none';
  img-src 'self' data:;
  font-src 'self' data:;
  style-src 'self' 'unsafe-inline';
  script-src 'self' 'unsafe-inline' blob:;
  connect-src 'self';
  worker-src 'self' blob:;


  # HSTS: Prefer enabling at the Cloudflare dashboard (zone level) for lightningdistancecalculator.com
  # SSL/TLS -> Edge Certificates -> HTTP Strict Transport Security (HSTS)
  # Avoid sending HSTS from .pages.dev to keep staging safe.
  # Strict-Transport-Security: max-age=31536000; includeSubDomains; preload



# --- Long-term cached assets (immutable, 1 year) ---
/favicon.ico
  Cache-Control: public, max-age=31536000, immutable

/_next/static/*
  Cache-Control: public, max-age=31536000, immutable

/*.js
  Cache-Control: public, max-age=31536000, immutable

/*.css
  Cache-Control: public, max-age=31536000, immutable

/images/*
  Cache-Control: public, max-age=31536000, immutable


# --- HTML pages (short edge cache + SWR) ---
/
  Cache-Control: public, s-maxage=600, stale-while-revalidate=60

/blog
  Cache-Control: public, s-maxage=600, stale-while-revalidate=60

/blog/*
  Cache-Control: public, s-maxage=600, stale-while-revalidate=60

/calculator
  Cache-Control: public, s-maxage=600, stale-while-revalidate=60

# --- Fresh-but-short for metadata files ---
/robots.txt
  Cache-Control: public, max-age=300, must-revalidate

/sitemap.xml
  Cache-Control: public, max-age=300, must-revalidate

/sitemap-*.xml
  Cache-Control: public, max-age=300, must-revalidate

# --- If you ever add API routes, keep them uncached ---
/api/*
  Cache-Control: no-store
